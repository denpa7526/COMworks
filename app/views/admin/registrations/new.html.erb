<div class='admin-account-page' id='admin-account-page'>
  <div class='admin-account-page__inner clearfix'>
    <div class='admin-account-page__inner--left admin-account-page__header'>
      <h2>Create<br>Admin-account</h2>
      <h5>管理者アカウントの作成</h5>
    </div>

    <div class='admin-account-page__inner--right adminuser-form'>
      <%= form_with model: @admin_user, url: admin_registrations_path, local: true do |f| %>

        <%= render "admin/shared/error_messages", model: f.object %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :last_name %>
          </div>
          <div class='field-input'>
            <%= f.text_field :last_name, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :first_name %>
          </div>
          <div class='field-input'>
            <%= f.text_field :first_name%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :phone_number %>
            <i>[ハイフンなし]</i>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone_number, placeholder:"例）08012345678",maxlength:"11"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>[6文字以上の半角英数字混合]</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "new-password"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "new-password"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
          <%= f.label :admin_code, "管理者登録コード" %>
          </div>
          <div class='field-input'>
          <%= f.password_field :admin_code, autocomplete: "off" %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>

      <% end %>
    </div>

  </div>
</div>