<div class='admin-account-page' id='admin-account-page'>
  <div class='admin-account-page__inner clearfix'>
    <div class='admin-account-page__inner--left admin-account-page__header'>
      <h2>Admin-account<br>Log in</h2>
      <h5>登録済みの管理者アカウントでログイン</h5>
    </div>

    <div class='admin-account-page__inner--right adminuser-form'>
      <%= form_with model: @admin_user, url: admin_sessions_path, local: true do |f|%>

        <%= render "admin/shared/error_messages", model: f.object %>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <%= f.label :password%>
            <i>[6文字以上の半角英数字混合]</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off"%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
          <%= f.label :admin_code, "管理者登録コード" %>
          </div>
          <div class='field-input'>
          <%= f.password_field :admin_code, autocomplete: "off" %>
          </div>
        </div>

        <div class='actions'>
          <%= f.submit "Log in", class: 'btn'%>
        </div>
        
      <% end %>
    </div>

  </div>
</div>